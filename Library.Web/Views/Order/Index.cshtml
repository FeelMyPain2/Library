@model OrderDto

@{
    ViewData["Title"] = "Rental cart";
}

<h1>Rental cart</h1>

<table class="table table-sm table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">№</th>
            <th scope="col">Author</th>
            <th scope="col">Title</th>
            <th scope="col">Count</th>
            <th scope="col">Rental price</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Items.Length; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model.Items[i].Author</td>
                <td>@Model.Items[i].Title</td>
                <td class="text-right">@Model.Items[i].Count</td>
                <td class="text-right">@Model.Items[i].RentalPrice</td>
                <td class="text-center">
                    <form class="form-inline" action="@Url.Action("RemoveItem", "Order")" method="post">
                        <input type="hidden" name="id" value="@Model.Items[i].BookId" />
                        <button class="text-right" type="submit">Delete from order</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total cost</td>
            <td class="text-right">@Model.TotalCount</td>
            <td class="text-right">@Model.TotalRentalPrice</td>
        </tr>
        <tr>
            <td colspan="3" class="text-right">Rental time</td>
            <td colspan="2" class="text-right">@Model.Date</td>
        </tr>
    </tfoot>
</table>
